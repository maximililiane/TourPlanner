<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/11.0.2"
            fx:controller="at.technikum_wien.tourPlanner.view.DescriptionWindowController">
    <children>
        <Pane prefHeight="400.0" prefWidth="600.0">
            <children>
                <ImageView fx:id="mapImage" fitHeight="133.0" fitWidth="210.0" layoutX="376.0" layoutY="50.0"
                           pickOnBounds="true" preserveRatio="true"/>
                <ListView fx:id="tourListView" prefHeight="400.0" prefWidth="150.0"/>
                <Separator layoutX="150.0" layoutY="40.0" prefHeight="2.0" prefWidth="450.0"/>
                <Label fx:id="titleLabel" layoutX="158.0" layoutY="11.0">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
                <Button layoutX="454.0" layoutY="14.0" mnemonicParsing="false" text="edit tour"/>
                <Button layoutX="523.0" layoutY="14.0" mnemonicParsing="false" text="show logs"/>
                <Label layoutX="158.0" layoutY="50.0" text="Popularity:"/>
                <Label fx:id="popularityLabel" layoutX="218.0" layoutY="50.0"/>
                <Label layoutX="158.0" layoutY="67.0" text="Child-friendliness:"/>
                <Label fx:id="childFriendlinessLabel" layoutX="262.0" layoutY="67.0" prefHeight="17.0"
                       prefWidth="56.0"/>
                <Label layoutX="158.0" layoutY="84.0" text="From:"/>
                <Label fx:id="fromLabel" layoutX="188.0" layoutY="84.0" prefHeight="17.0" prefWidth="82.0"/>
                <Label layoutX="158.0" layoutY="101.0" prefHeight="17.0" prefWidth="19.0" text="To:"/>
                <Label fx:id="toLabel" layoutX="175.0" layoutY="101.0" prefHeight="17.0" prefWidth="60.0"/>
                <Label layoutX="158.0" layoutY="118.0" text="Distance:"/>
                <Label fx:id="distanceLabel" layoutX="207.0" layoutY="119.0" prefHeight="17.0" prefWidth="30.0"/>
                <Label layoutX="158.0" layoutY="135.0" text="Estimated Time:"/>
                <Label fx:id="estimatedTimeLabel" layoutX="242.0" layoutY="135.0" prefHeight="17.0" prefWidth="56.0"/>
                <Label layoutX="158.0" layoutY="152.0" text="Transport Type:"/>
                <Label fx:id="transportTypeLabel" layoutX="242.0" layoutY="152.0" prefHeight="17.0" prefWidth="56.0"/>
                <Separator layoutX="150.0" layoutY="198.0" prefHeight="2.0" prefWidth="450.0"/>
                <Label layoutX="158.0" layoutY="201.0" text="Description"/>
                <Label fx:id="descriptionLabel" alignment="TOP_LEFT" layoutX="157.0" layoutY="218.0" prefHeight="170.0"
                       prefWidth="432.0" wrapText="true"/>
                <Button fx:id="deleteButton" layoutX="375.0" layoutY="14.0" mnemonicParsing="false" text="delete tour"
                        onAction="#deleteTour"/>

            </children>
      </Pane>
   </children>
</AnchorPane>
